<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- 关闭bean validate验证模式 -->
		<property name="javax.persistence.validation.mode">none</property>

		<!-- 配置hibernate二级缓存提供商，此处并不是jar包，jar包还要另外导入的-->
		<property name="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</property>


		<property name="show_sql">true</property>

		<mapping resource="com/favs/bean/Admins.hbm.xml" />
		<mapping resource="com/favs/bean/Consumer.hbm.xml" />
		<mapping resource="com/favs/bean/Supplier.hbm.xml" />
		<mapping resource="com/favs/bean/Buy.hbm.xml" />
		<mapping resource="com/favs/bean/Goods.hbm.xml" />
		<mapping resource="com/favs/bean/Gtype.hbm.xml" />
		<mapping resource="com/favs/bean/News.hbm.xml" />
		<mapping resource="com/favs/bean/Statu.hbm.xml" />
		<mapping resource="com/favs/bean/Car.hbm.xml" />
		<mapping resource="com/favs/bean/Item.hbm.xml" />

		<!-- 配置哪些类支持缓存 -->
		<class-cache usage="read-write" class="com.favs.bean.Goods" />

	</session-factory>


</hibernate-configuration>